<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:TestingProgram">
    <SolidColorBrush x:Key="LightGray" Color="#FFD3D3D3"></SolidColorBrush>
    <SolidColorBrush x:Key="DarkGray" Color="#FF222222"></SolidColorBrush>


    <Style x:Key="BaseWindow" TargetType="Window">
        <Setter Property="Control.Width" Value="800"/>
        <Setter Property="Control.Height" Value="1080"/>
        <Setter Property="Background" Value="{StaticResource LightGray}"/>
        <Setter Property="ResizeMode" Value="NoResize"/>

    </Style>
    <Style x:Key="BaseIcon" TargetType="{x:Type materialDesign:PackIcon}" BasedOn="{StaticResource {x:Type materialDesign:PackIcon}}">
        <Setter Property="Control.VerticalAlignment" Value="Center" />
        <Setter Property="Control.Width" Value="30" />
        <Setter Property="Control.Height" Value="30" />
        <Setter Property="Control.Foreground" Value="{StaticResource LightGray}"/>
    </Style>

