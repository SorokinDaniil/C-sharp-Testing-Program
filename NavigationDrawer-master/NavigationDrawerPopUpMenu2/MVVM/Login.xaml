            <Grid>
                <Button Content="Зарегестрироваться" FontFamily="QUATTROCENTO SANS"  Margin="0,16" Foreground="#FFEFFBEB" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

        </StackPanel>
    </Grid>
</Window>
